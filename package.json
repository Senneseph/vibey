{
    "name": "vibey",
    "displayName": "Vibey",
    "description": "Offline-first AI Coding Agent",
    "publisher": "vibey-project",
    "version": "0.5.9",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Senneseph/vibey"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "Vibey",
            "properties": {
                "vibey.provider": {
                    "type": "string",
                    "enum": [
                        "ollama",
                        "openai-compatible"
                    ],
                    "default": "ollama",
                    "description": "Select the LLM provider: Ollama or OpenAI-compatible (e.g., Ollama, LM Studio, etc.)"
                },
                "vibey.ollamaUrl": {
                    "type": "string",
                    "default": "http://localhost:11434",
                    "description": "URL of the Ollama API server"
                },
                "vibey.model": {
                    "type": "string",
                    "default": "Qwen3-coder:latest",
                    "description": "Name of the model to use in Ollama or OpenAI-compatible server"
                },
                "vibey.openaiBaseUrl": {
                    "type": "string",
                    "default": "http://localhost:11434/v1",
                    "description": "Base URL of the OpenAI-compatible API server (e.g., http://192.168.1.83:8080/v1)"
                },
                "vibey.openaiApiKey": {
                    "type": "string",
                    "default": "",
                    "description": "API key for OpenAI-compatible server (if required)"
                },
                "vibey.autoRunTools": {
                    "type": "boolean",
                    "default": false,
                    "description": "If true, non-critical tools will run without approval (Use with caution)"
                },
                "vibey.mcpServers": {
                    "type": "object",
                    "default": {},
                    "description": "Configure MCP servers. Key is server name, Value is command and arguments (e.g. { \"command\": \"node\", \"args\": [\"server.js\"] })"
                },
                "vibey.mcpMarketplaceEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable MCP marketplace integration"
                },
                "vibey.mcpMarketplaceAutoUpdate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically check for marketplace updates"
                },
                "vibey.disableFilesystemServer": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the built-in Filesystem MCP server"
                },
                "vibey.disableOpenSpecServer": {
                    "type": "boolean",
                    "default": false,
                    "description": "Disable the built-in OpenSpec MCP server"
                },
                "vibey.memoryBankEnabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable memory bank for persistent context storage"
                },
                "vibey.memoryMaxSizeMB": {
                    "type": "number",
                    "default": 100,
                    "description": "Maximum memory bank size in MB (50-500 recommended)"
                },
                "vibey.preferredShell": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "powershell",
                        "cmd",
                        "bash",
                        "zsh",
                        "sh",
                        "fish"
                    ],
                    "default": "auto",
                    "description": "Preferred shell for Vibey terminals. 'auto' uses the system default."
                },
                "vibey.terminalHistoryLimit": {
                    "type": "number",
                    "default": 500,
                    "description": "Maximum number of terminal command history entries to preserve."
                },
                "vibey.rules": {
                    "type": "object",
                    "default": {},
                    "description": "Rules for Augment Chat and Agent interactions"
                },
                "vibey.userGuidelines": {
                    "type": "string",
                    "default": "",
                    "description": "Natural language instructions to shape LLM interactions"
                },
                "vibey.maxContextTokens": {
                    "type": "number",
                    "default": 32768,
                    "enum": [
                        8192,
                        16384,
                        32768,
                        65536,
                        131072,
                        262144
                    ],
                    "description": "Maximum context window size in tokens. Smaller = faster but less context (8k=limited, 32k=balanced, 256k=full). Adjust based on your system memory."
                },
                "vibey.ollamaRequestTimeout": {
                    "type": "number",
                    "default": 300000,
                    "description": "How long to wait for Ollama response in milliseconds (300000 = 5 min default, 600000 = 10 min for larger models)"
                }
            }
        },
        "commands": [
            {
                "command": "vibey.start",
                "title": "Vibey: Start Agent"
            },
            {
                "command": "vibey.openSettings",
                "title": "Vibey Settings",
                "icon": "$(settings-gear)"
            },
            {
                "command": "vibey.selectModel",
                "title": "Vibey: Select Model",
                "icon": "$(server-process)"
            },
            {
                "command": "vibey.voiceInput",
                "title": "Vibey: Voice Input",
                "icon": "$(mic)"
            },
            {
                "command": "vibey.mcpStatus",
                "title": "Vibey: MCP Server Status",
                "icon": "$(plug)"
            },
            {
                "command": "vibey.mcpReload",
                "title": "Vibey: Reload MCP Servers",
                "icon": "$(refresh)"
            },
            {
                "command": "vibey.mcpListTools",
                "title": "Vibey: List All Tools",
                "icon": "$(tools)"
            },
            {
                "command": "vibey.showMcpMarketplace",
                "title": "Vibey: Show MCP Marketplace",
                "icon": "$(extensions)"
            },
            {
                "command": "vibey.refreshMcpMarketplace",
                "title": "Vibey: Refresh MCP Marketplace",
                "icon": "$(sync)"
            },
            {
                "command": "vibey.diagnostics",
                "title": "Vibey: Run Diagnostics",
                "icon": "$(debug)"
            },
            {
                "command": "vibey.clearHistory",
                "title": "Vibey: Clear Chat History",
                "icon": "$(trash)"
            },
            {
                "command": "vibey.runFeatureTests",
                "title": "Vibey: Run Feature Tests",
                "icon": "$(beaker)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vibey-sidebar",
                    "title": "Vibey",
                    "icon": "icon.png"
                }
            ]
        },
        "views": {
            "vibey-sidebar": [
                {
                    "icon": "icon.png",
                    "type": "webview",
                    "id": "vibey.chatView",
                    "name": "Chat"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "vibey.selectModel",
                    "when": "view == vibey.chatView || view == vibey.chatViewAux",
                    "group": "navigation"
                },
                {
                    "command": "vibey.openSettings",
                    "when": "view == vibey.chatView || view == vibey.chatViewAux",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run copy-webview-resources && npm run esbuild-base -- --minify",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild": "npm run copy-webview-resources && npm run esbuild-base -- --sourcemap",
        "esbuild-watch": "npm run copy-webview-resources && npm run esbuild-base -- --sourcemap --watch",
        "copy-webview-resources": "node scripts/copy-webview-resources.js",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "lint": "eslint src --ext ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "package": "npm run copy-webview-resources && vsce package"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.0",
        "@types/node": "20.x",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "esbuild": "^0.27.1",
        "eslint": "^8.57.0",
        "fast-check": "^3.15.0",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.24.3",
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "fs-extra": "^11.2.0",
        "marked": "^12.0.2",
        "zod": "^3.23.8"
    }
}
